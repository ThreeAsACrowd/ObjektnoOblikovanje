<Window x:Class="AccountingWPF.Views.MonateryFlowReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monatery Flow Report" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ComboBox ItemsSource="{Binding Path=ActiveYears}" x:Name="cbx_yearSelection" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="120"/>

    </Grid>
</Window>
