<Window x:Class="AccountingWPF.Views.IngoingInvoiceMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IngoingInvoiceMainWindow" Height="500" Width="800">
        <Grid RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.035"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.Resources>
                <Style x:Key="RowHeadersWithId" TargetType="{x:Type DataGridRowHeader}">
                    <Setter Property="Content" Value="{Binding Id}" />
                </Style>
            </Grid.Resources>
            <DataGrid AutoGenerateColumns="False"
                  Margin="10,53,14,71" 
                  Name="dataGridIngoingInvoices" 
                  AlternatingRowBackground="AliceBlue"  
                  HeadersVisibility="All" CanUserAddRows="True"
                  ScrollViewer.CanContentScroll="True" 
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Date}" Header="Date" />
                    <DataGridTextColumn Binding="{Binding InvoiceClassNumber}" Header="Invoice class number" />
                    <DataGridTextColumn Binding="{Binding CustomerInfo}" Header="Customer info" />
                    <DataGridTextColumn Binding="{Binding Amount}" Header="Amount" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Add new ingoing invoice" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="146" Height="22"/>
            <Button Content="Delete ingoing invoice" HorizontalAlignment="Left" Margin="172,10,0,0" VerticalAlignment="Top" Width="130" Height="22"/>
            <Button Content="Edit ingoing invoice" HorizontalAlignment="Left" Margin="327,10,0,0" VerticalAlignment="Top" Width="130" Height="22"/>
            <Button Content="Save ingoing invoice" HorizontalAlignment="Left" Margin="495,10,0,0" VerticalAlignment="Top" Width="130" Height="22"/>
        </Grid>
</Window>
