@model AccountingWeb.BindingModels.ReportBindingModel

@{
    ViewBag.Title = "Index";
}

<h2>Annual Report</h2>

@using (Html.BeginForm("GenerateReport", "AnnualReport"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedYear, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedYear, new SelectList(Model.ActiveYears))
                @Html.ValidationMessageFor(model => model.SelectedYear)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Generate report" class="btn btn-default" />
            </div>
        </div>
    </div>
}
