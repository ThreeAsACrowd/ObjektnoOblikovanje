@model IEnumerable<DataRepository.Models.Expenditure>

@{
    ViewBag.Title = "Index";
    int counter = 0;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            No.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JournalEntryNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountCash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountTransferAccount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountNonCashBenefit)
        </th>
        <th>
            VAT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Article22)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(++counter)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Date)*@
            @String.Format("{0:d}", item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JournalEntryNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountCash)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountTransferAccount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountNonCashBenefit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vat.Percentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Article22)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Ajax.ActionLink("Delete", "Delete", new { id = item.Id },
            new AjaxOptions()
            {
                HttpMethod = "Post",

                Confirm = "Do you really want to remove this item?",
                OnComplete = "function() { $(this).parent().parent().remove();}"

            })
        </td>
    </tr>
}

</table>
