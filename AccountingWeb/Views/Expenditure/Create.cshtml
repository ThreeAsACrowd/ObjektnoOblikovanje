                @Html.EditorFor(model => model.Expenditure.Total)
                @Html.ValidationMessageFor(model => model.Expenditure.Total)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
