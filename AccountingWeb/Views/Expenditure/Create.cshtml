                @Html.EditorFor(model => model.Expenditure.AmountNonCashBenefit)
                @Html.ValidationMessageFor(model => model.Expenditure.AmountNonCashBenefit)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Expenditure.Article22, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Expenditure.Article22)
