<script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>

<script type="text/javascript">
    $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('#Expenditure_Date').datepicker({ dateFormat: 'd.m.yy.' });
    })
</script>
<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Expenditure</h4>
        <hr />
        @Html.ValidationSummary(false)

        <div class="form-group">
            @Html.LabelFor(model => model.Expenditure.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Expenditure.Date)
                @Html.ValidationMessageFor(model => model.Expenditure.Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Expenditure.JournalEntryNum, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Expenditure.JournalEntryNum)
                @Html.ValidationMessageFor(model => model.Expenditure.JournalEntryNum)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Expenditure.AmountCash, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Expenditure.AmountCash)
                @Html.ValidationMessageFor(model => model.Expenditure.AmountCash)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Expenditure.AmountTransferAccount, new { @class = "control-label col-md-2" })
